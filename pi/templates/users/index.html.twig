{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block body %}

        <h3><i class="fa fa-angle-right"></i> Users index</h3>
        <a href="{{ path('users_new') }}">Create new</a>
        <div class="row mb">
            <!-- page start-->
            <div class="content-panel">
                <div class="adv-table">
                    <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>IdUser</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Adresse</th>
                            <th>Email</th>
                            <th>Image</th>
                            <th>Role</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in Users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.idUser }}</td>
                                <td>{{ user.nom }}</td>
                                <td>{{ user.prenom }}</td>
                                <td>{{ user.adresse }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.image }}</td>
                                <td>{{ user.role }}</td>
                                <td>
                                    <a href="{{ path('users_show', {'id': user.id}) }}">show</a>
                                    <a href="{{ path('users_edit', {'id': user.id}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- page end-->
        </div>
        <!-- /row -->

{% endblock %}
