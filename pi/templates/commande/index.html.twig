{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
<h3><i class="fa fa-angle-right"></i> Users index</h3>
<a href="{{ path('commande_new') }}">Create new</a>
<div class="row mb">
    <!-- page start-->
    <div class="content-panel">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbProduits</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in Commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.nbProduits }}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
            </table>
        </div>
    </div>
    <!-- page end-->
</div>
    <!-- /row -->
{% endblock %}
