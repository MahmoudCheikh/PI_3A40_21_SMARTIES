{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
<h3><i class="fa fa-angle-right"></i> Evenemenet index</h3>
<a href="{{ path('evenement_new') }}">Create new</a>
<div class="row mb">
    <!-- page start-->
    <div class="content-panel">
        <div class="adv-table">
            <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>DateD</th>
                <th>DateF</th>
                <th>Lieu</th>
                <th>Type</th>
                <th>Nb_participants</th>
                <th>Nb_places</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.id }}</td>
                <td>{{ evenement.nom }}</td>
                <td>{{ evenement.dateD ? evenement.dateD|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.dateF ? evenement.dateF|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.lieu }}</td>
                <td>{{ evenement.type }}</td>
                <td>{{ evenement.nbParticipants }}</td>
                <td>{{ evenement.nbPlaces }}</td>
                <td>
                    <a href="{{ path('evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
            </table>
        </div>
    </div>
    <!-- page end-->
</div>
    <!-- /row -->
{% endblock %}
